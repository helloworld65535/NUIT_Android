<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 用于创建阴影的形状 -->
    <item>
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="#DCDADA" />
        </shape>
    </item>
    <!-- 用于创建背景的形状 -->
    <item android:bottom="1.5dp" android:right="1.5dp" >
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
